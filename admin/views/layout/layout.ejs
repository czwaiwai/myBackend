            <!--<li><a href="#">导航配置</a></li>-->
            <!--<li><a href="#">动态</a></li>-->
            <!--<li><a href="#">逛逛</a></li>-->
            <!--<li><a href="#">生活</a></li>-->
            <!--<li><a href="#">同款</a></li>-->
          <!--</ul>-->
        <!--</li>-->
        <li class="treeview  <% if(["/goods/index"].indexOf(path) > -1){ %>active<% } %> ">
          <a href="#"><i class="fa fa-shopping-bag "></i><span>商品管理</span>
            <span class="pull-right-container">
              <i class="fa fa-angle-left pull-right"></i>
            </span>
          </a>
          <ul class="treeview-menu">
            <li><a href="<%=assetsPath %>/goods/index">商品列表</a></li>
          </ul>
        </li>
        <li class="treeview <% if(["/orders/index"].indexOf(path) > -1){ %>active<% } %> ">
          <a href="#"><i class="fa fa-wpforms"></i><span>订单管理</span>
            <span class="pull-right-container">
              <i class="fa fa-angle-left pull-right"></i>
            </span>
          </a>
          <ul class="treeview-menu">
            <li><a href="<%=assetsPath %>/orders/index">全部</a></li>
            <li><a href="#">待付款</a></li>
            <li><a href="#">已付款</a></li>
            <li><a href="#">已发货</a></li>
            <li><a href="#">退款订单</a></li>
          </ul>
        </li>
        <li class="treeview  <% if(["/users/index"].indexOf(path) > -1){ %>active<% } %> ">
          <a href="#"><i class="fa fa-users"></i><span>用户管理</span>
            <span class="pull-right-container">
              <i class="fa fa-angle-left pull-right"></i>
            </span>
          </a>
          <ul class="treeview-menu " >
            <li <% if(path=="/users/index"){ %>class="active"<% } %> ><a href="<%=assetsPath %>/users/index">用户列表</a></li>
          </ul>
        </li>
        <li class="treeview  <% if(["/article/index","/pages/index"].indexOf(path) > -1){ %>active<% } %> " >
          <a href="#"><i class="fa fa-newspaper-o"></i><span>资讯管理</span>
            <span class="pull-right-container">
              <i class="fa fa-angle-left pull-right"></i>
            </span>
          </a>
          <ul class="treeview-menu">
            <li <% if(path=="/article/index" && query.catalogName === 'news'){ %>class="active"<% } %> ><a href="<%=assetsPath %>/article/index?catalogName=news"><span>新闻列表</span></a></li>
            <li <% if(path=="/article/index" && query.catalogName === 'articles'){ %>class="active"<% } %> ><a href="<%=assetsPath %>/article/index?catalogName=articles"><span>烹调菜谱</span></a></li>
            <li <% if(path=="/pages/index"){ %>class="active"<% } %> ><a href="<%=assetsPath %>/pages/index"><span>单页管理</span></a></li>
          </ul>
        </li>
