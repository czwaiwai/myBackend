          <!--</div>-->
          <!--</div>-->
        </div>
      </div>
      <!-- /.box-header -->
      <div class="box-body table-responsive no-padding">
        <table class="table table-bordered table-hover">
          <tbody>
          <tr>
            <th>订单Id</th>
            <th>商品图片</th>
            <th>订单状态</th>
            <th>订单总价</th>
            <th>下单时间</th>
            <th>支付时间</th>
            <th>操作</th>
          </tr>
          <%  orders.forEach(function(item){ %>
          <tr>
            <td><%=item._id %></td>
            <td><img src="<%=item.imgTmb %>" ></td>
            <td><%=item.statusName %></td>
            <td><%=item.needPrice%></td>
            <td><%=item.create_at_ago() %></td>
            <td><%=item.pay_at_ago() %></td>
            <td><p><a href="<%=assetsPath %>/orders/detail/<%=item._id %>">订单详情</a></p></td>
          </tr>
          <% })%>
          </tbody>

        </table>
      </div>
      <!-- /.box-body -->
    </div>
    <!-- /.box -->
    <div class="j_pager" data-page="<%=page %>"  data-count="<%=count%>"></div>
  </div>

</div>
