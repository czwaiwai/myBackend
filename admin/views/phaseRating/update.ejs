<% layout('layout/layout') %>
<% block('header').append(`<style>
</style>`) %>
<div class="row">
    <div class="col-md-12">
        <div class="box box-info">
            <div class="box-header with-border">
                <h3 class="box-title">用户数据修改</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            <form action="<%=assetsPath %>/phaseRating/list/update" method="post" class="form-horizontal" novalidate>
                <div class="box-body">
                    <div class="form-group">
                        <label for="school" class="col-sm-2 control-label">学校名称</label>
                        <div class="col-sm-10">
                            <input name="school" value="<%=curr.school || ''%>" type="text" class="form-control"  placeholder="赛事活动名称，请保证唯一">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="username" class="col-sm-2 control-label">学生名称</label>
                        <div class="col-sm-10">
                            <input name="username" value="<%=curr.username || ''%>" type="text" class="form-control"  placeholder="赛事活动名称，请保证唯一">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="mobile" class="col-sm-2 control-label">手机号</label>
                        <div class="col-sm-10">
                            <input name="mobile" value="<%=curr.mobile || ''%>" type="text" class="form-control"  placeholder="赛事活动名称，请保证唯一">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="grade" class="col-sm-2 control-label">年级</label>
                        <div class="col-sm-10">
                            <input name="grade" value="<%=curr.grade || ''%>" type="text" class="form-control"  placeholder="赛事活动名称，请保证唯一">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="enterNo" class="col-sm-2 control-label">考号</label>
                        <div class="col-sm-10">
                            <input name="enterNo" <%=curr._id?'readonly':'' %>  value="<%=curr.enterNo || ''%>" type="text" class="form-control"  placeholder="赛事活动名称，请保证唯一">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="score" class="col-sm-2 control-label">成绩</label>
                        <div class="col-sm-10">
                            <input name="score" <%=curr._id?'readonly':'' %>  value="<%=curr.score || ''%>" type="text" class="form-control"  placeholder="赛事活动名称，请保证唯一">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="isUp" class="col-sm-2 control-label">是否晋级</label>
                        <div class="col-sm-10">
                            <input name="isUp" <%=curr._id?'readonly':'' %>  value="<%=curr.isUp || ''%>" type="text" class="form-control"  placeholder="赛事活动名称，请保证唯一">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="teacher" class="col-sm-2 control-label">指导老师</label>
                        <div class="col-sm-10">
                            <input name="teacher" value="<%=curr.teacher || ''%>" type="text" class="form-control"  placeholder="赛事活动名称，请保证唯一">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="joinStat" class="col-sm-2 control-label">报名方式</label>
                        <div class="col-sm-10">
                            <input name="joinStat" value="<%=curr.joinStat || ''%>" type="text" class="form-control"  placeholder="赛事活动名称，请保证唯一">
                        </div>
                    </div>
                </div>
                <!-- /.box-body -->
                <div class="box-footer">
                    <div class="col-sm-offset-2 col-sm-10">
                        <% if(curr._id){ %>
                        <input name="_id" value="<%=curr._id %>" type="hidden">
                        <% } %>
                        <button type="submit" class="btn btn-info ">修改</button>
                        <!-- <button type="reset" class="btn btn-default">重置</button> -->
                    </div>
                </div>
                <!-- /.box-footer -->
            </form>
        </div>
    </div>
</div>