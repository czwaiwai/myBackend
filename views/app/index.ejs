<div class="page has_tab" >
  <div class="light-bg">
    <div class="swiper-container" data-space-between='10' data-pagination='.swiper-pagination' data-autoplay="1000">
      <div class="swiper-wrapper">
        <% homeBanner.forEach(function(item,index){ %>
        <div class="swiper-slide"><img src="<%=item.value %>" alt=""></div>
        <% }) %>
      </div>
    </div>
    <div class="fs13">欢迎您的到来</div>
  </div>
  <div class="index_goods_wrap margin-top light-bg">
    <ul class="index_goods_list clearfix ">
      <% goodTypes.forEach(function(item) { %>
      <li class="item" style="background:url(<%=item.imgUrl %>) no-repeat center;background-size:cover;">
        <a href="/app/goods/index?catalog=<%=item.name %>" ><%=item.nameCn %></a>
      </li>
      <% }) %>
    </ul>
  </div>

  <div class="product_list_wrap light-bg margin-top">
    <h3 class="title main-color text-center padding-bottom5">推荐产品</h3>
    <ul class="product_list clearfix">
      <% goods.forEach(function(item){  %>
      <li class="pro_item">
