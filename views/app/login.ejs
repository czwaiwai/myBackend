<% layout('layout/appLayout') %>
<div class="page has_head">
  <div class="page__hd weui-flex">
    <div style="width:60px;padding-left:10px;">
      <a href="/app/index"><i class="iconfont icon-back"></i>首页</a>
    </div>
    <div class="weui-flex__item">
      <h1 class="title"><%=title %></h1>
    </div>
    <div style="width:60px;"></div>
  </div>
  <div class="page_bd">
    <form action="/app/login" method="post" novalidate>
      <div class="weui-cells weui-cells_form">
        <div class="weui-cell ">
          <div class="weui-cell__hd">
            <label class="weui-label">账号</label>
          </div>
          <div class="weui-cell__bd">
            <input name="userName" class="weui-input" type="tel" placeholder="手机号/用户账号">
          </div>
          <!--<div class="weui-cell__ft">-->
            <!--<button class="weui-vcode-btn">获取验证码</button>-->
          <!--</div>-->
        </div>
        <div class="weui-cell">
          <div class="weui-cell__hd"><label class="weui-label">密码</label></div>
          <div class="weui-cell__bd">
            <input name="password" class="weui-input" type="password"  placeholder="请输入密码">
          </div>
        </div>
        <div class="weui-cell weui-cell_vcode">
          <div class="weui-cell__hd"><label class="weui-label">验证码</label></div>
          <div class="weui-cell__bd">
            <input name="verifyCode" class="weui-input" type="number" placeholder="请输入验证码">
          </div>
          <div class="weui-cell__ft">
            <img class="weui-vcode-img padding5" src="/imgCode" onclick="this.src='/imgCode?time='+Date.now()" >
          </div>
        </div>
      </div>
      <% if(error) { %>
      <p class="weui-cell_warn"><%=error %></p>
      <% }%>
      <div class="weui-btn-area">
        <button class="weui-btn weui-btn_primary" >登录</button>
      </div>
    </form>
  </div>
</div>
