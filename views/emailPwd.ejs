<% layout('layout/layout') %>
<% block('header').append(`<style>
input,input::-webkit-input-placeholder {
    font-size: 11px;
    padding-top: 3px;
}
.main-login{
 	background-color: #fff;
    /* shadows and rounded borders */
    -moz-border-radius: 2px;
    -webkit-border-radius: 2px;
    border-radius: 2px;
    -moz-box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
    -webkit-box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
    box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
}
.main-center{
 	margin-top: 30px;
 	margin: 0 auto;
 	max-width: 600px;
    padding:15px;

}

.login-button{
	margin-top: 5px;
}

.login-register{
	font-size: 11px;
	text-align: center;
}
.input-group{
  width:100%;
}
.border_success {
  border:1px solid #58953b;
  background:#eaf5e5;
  padding:20px 150px;
}
.border_error {
    border: 1px solid #e03114;
    background: #fbd6cb;
}
</style>`)%>
<div class="container">
    <div class="row">
        <div class="main-login main-center " >
            <h4>重置密码</h4>
            <% if(query.isChangPwd) { %>
            <div class=" border_error text-center" style="margin-top:25px;margin-bottom:25px;">
                <h4>您在一段时间之内已修改过密码，请一段时间后再重试</h4>
                <p class="text-muted">稍后再试</p>
                <p><a href="/">去逛逛先</a></p>
            </div>
            <% } else { %>
                <% if (query.success) { %>
                <div class=" border_success text-center" style="margin-top:25px;margin-bottom:25px;">
                    <h4>密码重置成功</h4>
                    <p class="text-muted">快去登录看看吧</p>
                    <p><a href="/login">去登录</a></p>
                </div>
                <% } else { %>
                <form  method="post"  action="/emailPwd" novalidate class="form-horizontal">
                    <div class="form-group">
                        <label for="inputPassword3" class="col-sm-2 control-label">新密码</label>
                        <div class=" col-sm-10">
                            <input name="pwd" type="password" class="form-control" id="pwd" placeholder="请输入新的登录密码">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputPassword3" class="col-sm-2 control-label">重复密码</label>
                        <div class="col-sm-10">
                            <input name="pwdRepeat" type="password" class="form-control" id="pwdRepeat" placeholder="再次输入登录密码">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputPassword3" class="col-sm-2 control-label">验证码</label>
                        <div class="col-sm-10">
                            <div class="input-group">
                                <input type="text" class="form-control" name="verifyCode" id="verifyCode" placeholder="输入图形验证码">
                                <div class="input-group-addon" style="width: 82px;padding: 0;height: 34px;"><img src="/imgCode" onclick="this.src='/imgCode?time='+Date.now()" style="max-width:100%;" ></div>
                            </div>
                        </div>
                    </div>
                    <% if(error){ %> <p class="text-danger"><%=error %></p><% } %>
                    <div class="form-group ">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-primary login-button">确定</button>
                        </div>
                    </div>
                </form>
                <% } %>
            <% } %>
        </div>
    </div>
</div>
<% block('footer').append(`<script>
require(['jquery.validate.defaults'],function () {})
</script>`)%>