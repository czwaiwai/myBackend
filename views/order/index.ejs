<div class="container">
    <div class="section section_no_padding" >
        <div class="section_title">收货地址</div>
        <div class="section_body">
            <div class="row">
                <div class="col-md-8">
                    <form class="form-horizontal margin-top20">
                        <div class="form-group">
                            <label for="inputEmail3" class="col-sm-2 control-label">所在地区</label>
                            <div class="col-sm-3">
                                <select id="provinceChoose" name="provinceId"  class="province_choose form-control">
                                    <option>请选择</option>
                                    <% province.forEach(function(item){ %>
                                    <option value="<%=item.id%>"><%=item.name %></option>
                                    <% })%>
                                </select>
                            </div>
                            <div class="col-sm-3">
                                <select  id="cityChoose" name="city" class="form-control">
                                    <option>请选择</option>
                                </select>
                            </div>
                            <div class="col-sm-4">
                                <select  id="districtChoose"  name="district" class="form-control">
                                    <option>请选择</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputPassword3" class="col-sm-2 control-label">详细地址</label>
                            <div class="col-sm-10">
                                <textarea name="address" class="form-control" style="resize:none;" rows="3" placeholder="详细地址，街道，门牌号等"></textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputPassword3" class="col-sm-2 control-label">收件人</label>
                            <div class="col-sm-4">
                                <input type="text" name="name" class="form-control" id="inputPassword3" placeholder="收件人姓名">
                            </div>
                            <label for="inputPassword3" class="col-sm-2 control-label">手机号码</label>
                            <div class="col-sm-4">
                                <input type="text" name="mobile" class="form-control" id="inputPassword3" placeholder="手机号码">
                            </div>
                        </div>
                    </form>
                </div>
                <div class="col-md-4">
                    <div class="margin-top20">
                        <button class="btn btn-default">保存地址</button>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <div class="section section_no_padding" >
        <div class="section_title">
            <div class="col-md-4">商品信息</div>
            <div class="col-md-2">单价</div>
            <div class="col-md-2">数量</div>
            <div class="col-md-2">小计</div>
            <div class="col-md-2">实付</div>
        </div>
        <div class="padding15-h ">
            <% goods.forEach(function(item){ %>
            <div class="row padding-v order_item">
                <div class="col-md-4">
                    <div class="row">
                        <div class="col-md-5">
                            <img src="<%=item.imgTmb%>" style="width:100px;height:100px;" >
                        </div>
                        <div class="col-md-7">
                           <h5><%=item.name %></h5>
                            <p class="text-muted">
                                深海蓝 男款45-46码
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-md-2">￥19.90</div>
                <div class="col-md-2">1</div>
                <div class="col-md-2">￥19.90</div>
                <div class="col-md-2">￥19.90</div>
            </div>
            <% })%>
            <div class="row padding-v order_item" >
                <div class="col-md-4">
                    <div class="row">
                        <div class="col-md-4">
                            <img src="" style="width:100px;height:100px;" >
                        </div>
                        <div class="col-md-8">
                           <h5>玩趣彩虹四季拖鞋</h5>
                            <p class="text-muted">
                                深海蓝 男款45-46码
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-md-2">￥19.90</div>
                <div class="col-md-2">1</div>
                <div class="col-md-2">￥19.90</div>
                <div class="col-md-2">￥19.90</div>
            </div>
        </div>

    </div>
    <hr>
    <div class="text-right">
        <div>商品合计：￥329</div>
        <div>运费：￥329</div>
        <div>应付总额：￥329</div>
        <div><button class="btn btn-lg btn-primary">去付款</button></div>
    </div>
</div>
<% block('footer').append(`<script>
    jQuery(function(){
        function remoteList(id,name,cb) {
        	$.get('/cityAndArea?name='+name+'&addrId=' + id).done(function(res){
            	var optionTmp = '<option value="" >请选择</option>'
            	res.data.list.forEach(function(item) {
            		optionTmp += '<option value='+item.id+'>'+item.name+'</option>'
            	})
            	cb && cb(optionTmp)

            })
        }
    	var $cityChoose =$('#cityChoose')
    	var $districtChoose = $('#districtChoose')
    	$('#provinceChoose').on('change', function() {
    		$districtChoose.empty().append('<option value="" >请选择</option>')
            remoteList($(this).val(), 'city',function(optionTmp){
            	$cityChoose.empty().append(optionTmp)
            })
    	})
    	$('#cityChoose').on('change', function () {
            remoteList($(this).val(), 'area',function(optionTmp){
            	$districtChoose.empty().append(optionTmp)
            })
    	})
    })
</script>`) %>