  <div class="row">
    <div class="col-md-6 col-xl-6">
      <form id="form" action="/tool/createUser" method="post" novalidate>
        <div class="form-group">
          <label >登录用户名</label>
          <input name="user[userName]" type="text" class="form-control" value="czwaiwai" placeholder="用户名">
        </div>
        <div class="form-group">
          <label >E-mail</label>
          <input name="user[email]" type="text" class="form-control"   value="278178596@qq.com"  placeholder="E-mail">
        </div>
        <div class="form-group">
          <label >昵称</label>
          <input name="user[nickName]" type="text" class="form-control" value="歪歪" placeholder="昵称">
        </div>
        <div class="form-group">
          <label >真实姓名</label>
          <input name="user[realName]" type="text" class="form-control" value="曹正"  placeholder="真实姓名">
        </div>
        <div class="form-group">
          <label >身份证</label>
          <input name="user[cardID]" type="text" class="form-control" value="420203199002114319"  placeholder="身份证">
        </div>
        <div class="form-group">
          <label >手机号码</label>
          <input name="user[mobile]" type="text" class="form-control" value="13728905705"  placeholder="手机号码">
        </div>
        <div class="form-group">
          <label >地区</label>
          <input name="user[area]" type="text" class="form-control"  value="深圳" placeholder="地区">
        </div>
        <div class="form-group">
          <label >备注</label>
          <input name="user[remark]" type="text" class="form-control" value="数钱数到自然醒，睡觉睡到脚抽经"  placeholder="电子邮箱">
        </div>
        <div class="form-group">
          <label >头像</label>
          <div id="imgUpload" class="img_file"  data-input="#headImg" >
            <input name="file"  multiple  style="display:none;" type="file" >
          </div>
          <input  id="headImg" name="user[headImg]"  type="hidden" class="form-control"  placeholder="头像">
        </div>
        <div class="form-group">
          <label >地址</label>
          <input name="user[address]" type="text" class="form-control"  value="深圳市福田车公庙地铁站" placeholder="地址">
        </div>
        <input name="user[amount]" type="hidden" class="form-control"  placeholder="余额">
        <input name="user[score]" type="hidden" class="form-control"  value="0" placeholder="积分">
        <button type="submit" class="btn btn-default">创建</button>
      </form>
    </div>
    <div class="col-md-6 col-xl-6">

    </div>
  </div>
</div><!-- /.container -->
<% block('footer').append(`<script src="/js/uploadImg.js"></script>`)%>
<% block('footer').append(`<script>
    jQuery(function(){
          //var $form=$("#form");
       $('#imgUpload').uploadImg(function(imgs){
            $(this).css({"background":"url("+imgs[0].path+") no-repeat","background-size":"cover"});
       });
    })
</script>`)%>
