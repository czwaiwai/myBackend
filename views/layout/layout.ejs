<script src="/js/bootstrap/js/bootstrap.min.js"></script>
<script src="/js/bootstrap-dialog.min.js"></script>
<script src="/js/bootoast.js"></script>
<script src="/js/underscore-min.js"></script>
<script src="/js/main.js"></script>
<%- block('footer') %>
</body>
</html>